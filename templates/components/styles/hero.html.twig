<div class="u-full-width hero">
    <div class="l-center">
        <div class="l-sidebar">
            <div>
                <div class="not-sidebar">
                    <h1>{% block title %}{{ page.title|default('W3C') }}{% endblock %}</h1>
                    {% block heroLead %}
                        {% if page.localized is defined and page.localized|length > 0 %}
                            {{ include('@W3CWebsiteTemplates/components/styles/page_translations--hero.html.twig') }}
                        {% endif %}
                        <p class="lead">{{ page.pageLead }}</p>
                    {% endblock %}
                </div>
                {% if page.heroIllustration is defined and page.heroIllustration %}
                    <div class="sidebar">
                        <img src="{{ page.heroIllustration.url }}" role="img" alt/>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
