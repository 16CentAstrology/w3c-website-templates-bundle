{% macro breadcrumbs(breadcrumb, current = false) %}
    {% if breadcrumb.parent is defined and breadcrumb.parent %}
        {{ _self.breadcrumbs(breadcrumb.parent) }}
    {% endif %}
    <li><a href="{{ breadcrumb.url }}"{% if current %} aria-current="page"{% endif %}>{{ breadcrumb.title }}</a></li>
{% endmacro %}

<nav id="breadcrumb" aria-label="Breadcrumb">
    <div class="l-center">
        <div class="l-cluster">
            <ol class="breadcrumbs clean-list" role="list">
                {% if breadcrumbs %}
                    {{ _self.breadcrumbs(breadcrumbs, true) }}
                {% endif %}
            </ol>
        </div>
    </div>
</nav>
