<aside class="crosslinks">
    <div class="l-center">
        <div class="component component--columns component--columns--images">
            <div class="component--columns__intro">
                <h2>{{ crosslinks['title'] }}</h2>
                {% block introduction %}
                    <p>{{ crosslinks['text'] }}</p>
                {% endblock %}
            </div>
            <ul class="clean-list" role="presentation" data-anchor="no">
                {% for crosslink in crosslinks['links'] %}
                    {{ include('@W3CWebsiteTemplates/components/styles/crosslink.html.twig', {'crosslink': crosslink}) }}
                {% endfor %}
            </ul>
        </div>
    </div>
</aside>
