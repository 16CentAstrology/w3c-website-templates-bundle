{% if links is empty %}
    {% set links = [
        {
            'copy': 'footer.links.home'|trans({}, 'w3c_website_templates_bundle'),
            'url' : 'footer.links.homeurl'|trans({}, 'w3c_website_templates_bundle')
        },
        {
            'copy': 'footer.links.contact'|trans({}, 'w3c_website_templates_bundle'),
            'url' : 'footer.links.contacturl'|trans({}, 'w3c_website_templates_bundle')
        },
        {
            'copy': 'footer.links.help'|trans({}, 'w3c_website_templates_bundle'),
            'url' : 'footer.links.helpurl'|trans({}, 'w3c_website_templates_bundle')
        },
        {
            'copy': 'footer.links.sponsor'|trans({}, 'w3c_website_templates_bundle'),
            'url' : 'footer.links.sponsorurl'|trans({}, 'w3c_website_templates_bundle')
        }
        ,
        {
            'copy': 'footer.links.donate'|trans({}, 'w3c_website_templates_bundle'),
            'url' : 'footer.links.donateurl'|trans({}, 'w3c_website_templates_bundle')
        },
        {
            'copy': 'footer.links.privacy_policy'|trans({}, 'w3c_website_templates_bundle'),
            'url' : 'footer.links.privacy_policyurl'|trans({}, 'w3c_website_templates_bundle')
        },
        {
            'copy': 'footer.links.legal'|trans({}, 'w3c_website_templates_bundle'),
            'url' : 'footer.links.legalurl'|trans({}, 'w3c_website_templates_bundle')
        },
        {
            'copy': 'footer.links.cookies'|trans({}, 'w3c_website_templates_bundle'),
            'url' : 'footer.links.cookiesurl'|trans({}, 'w3c_website_templates_bundle')
        },
        {
            'copy': 'footer.links.system_status'|trans({}, 'w3c_website_templates_bundle'),
            'url' : 'footer.links.system_statusurl'|trans({}, 'w3c_website_templates_bundle')
        }
    ] %}
{% endif %}
<footer class="global-footer">
    <div class="l-center">
        <div class="global-footer__links">
            <div class="l-cluster">
                <ul class="clean-list" role="list">
                    {% for link in links %}
                        <li><a href="{{ link.url }}">{{ link.copy }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <ul class="clean-list" role="list">
                <li><a class="with-icon--larger" href="https://twitter.com/W3C">
                        <img class="icon icon--larger" src="{{ asset('svg/twitter.svg', 'main') }}" width="20"
                             height="20" alt
                             aria-hidden="true"/>
                        <span class="visuallyhidden">{{ 'footer.links.twitter'|trans({}, 'w3c_website_templates_bundle') }}</span></a>
                </li>
                <li><a class="with-icon--larger" href="https://github.com/w3c/">
                        <img class="icon icon--larger" src="{{ asset('svg/github.svg', 'main') }}" width="20"
                             height="20" alt
                             aria-hidden="true"/>
                        <span class="visuallyhidden">{{ 'footer.links.github'|trans({}, 'w3c_website_templates_bundle') }}</span></a>
                </li>
            </ul>
        </div>
        <p class="copyright">{{ 'footer.copyright'|trans({'date': date('now')}, 'w3c_website_templates_bundle')|raw }}</p>
    </div>
</footer>
