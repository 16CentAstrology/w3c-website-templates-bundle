<div class="l-sidebar search">
    <form role="search" novalidate>
        <div class="not-sidebar">
            <h2 class="visuallyhidden">{{ 'listing.news.filters.search'|trans({}, 'w3c_website_templates_bundle') }}</h2>
            <input type="search" id="search" name="search"
                   aria-label="{{ 'listing.news.filters.search'|trans({}, 'w3c_website_templates_bundle') }}"
                   value="{{ search }}"
            >
        </div>
        <div class="sidebar">
            <button type="submit" class="button">
                {{ 'listing.news.filters.search_button'|trans({}, 'w3c_website_templates_bundle') }}
            </button>
        </div>
    </form>
</div>
<div class="browse">
    <div>
        {% if archives is defined and archives|length > 0 %}
            <div>
                <h2>{{ 'listing.news.filters.archives'|trans({}, 'w3c_website_templates_bundle') }}</h2>
                <button type="button" class="button button--ghost with-icon with-icon--after"
                        style="display:none;" data-toggle="true">
                    {{ 'listing.news.filters.archives'|trans({}, 'w3c_website_templates_bundle') }}
                </button>
                <nav id="archive-nav" aria-label="{{ 'listing.news.filters.archives_label'|trans({}, 'w3c_website_templates_bundle') }}">
                    <ul class="clean-list" role="list">
                        {% for archive in archives %}
                            <li>
                                <a href="{{ archive.url }}">{{ archive.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
            </div>
        {% endif %}
    </div>
</div>
