<figure class="component component--video">
    <div class="l-frame l-frame--16-9">
        {% block video_iframe %}
            {% if iframe is defined and iframe %}
                {{ iframe|raw }}
            {% else %}
                <iframe title="{{ component.videoTitle|e('html_attr') }}"
                    src="{{ url }}"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen="" width="200" height="113" frameborder="0"></iframe>
            {% endif %}
        {% endblock %}
    </div>
    {% if caption is defined and caption or transcript is defined and transcript %}
        <figcaption>
            {% if caption is defined and caption %}
                <p>{{ caption|raw }}</p>
            {% endif %}
            {% if transcript is defined and transcript %}
                <a href="{{ transcript }}">{{ 'components.video.transcript'|trans({'title': title}, 'w3c_website_templates_bundle')|raw }}</a>
            {% endif %}
        </figcaption>
    {% endif %}
</figure>
