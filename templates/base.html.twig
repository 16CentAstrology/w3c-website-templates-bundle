<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8"/>
    <title>{% block title %}World Wide Web Consortium (W3C){% endblock %}</title>
    <meta name="description" content="{{ 'w3c.description'|trans({}, 'w3c_website_templates_bundle') }}"/>
    {% block stylesheets %}
        <style>
            .example-wrapper {
                margin: 1em auto;
                max-width: 800px;
                width: 95%;
                font: 18px/1.5 sans-serif;
            }

            .example-wrapper code {
                background: #F5F5F5;
                padding: 2px 6px;
            }
        </style>
    {% endblock %}
    {% block javascripts %}{% endblock %}
</head>
<body>
    <div class="example-wrapper">
        <h1>{{ block('title') }}</h1>
        {% block body %}{% endblock %}
    </div>
</body>
</html>
