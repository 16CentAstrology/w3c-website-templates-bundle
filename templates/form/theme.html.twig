{% use 'form_div_layout.html.twig' %}

{% block form_start %}
    {% set attr = attr|merge({novalidate: true}) %}
    {{ parent() }}
{% endblock form_start %}

{%- block form_row -%}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': "hint-" ~ id}} -%}
    {%- endif -%}
    {%- if form.vars.errors|length > 0 -%}
        {% set widget_attr = {
            attr: {
                'aria-describedby': (widget_attr.attr['aria-describedby']|default('') ~ ' error-' ~ form.vars.id)|trim
            }
        } %}
        {% set row_attr = row_attr|merge({class: (row_attr.class|default('') ~ ' field--error')|trim}) %}
    {%- endif -%}

    <div{% with {attr: row_attr|merge({class: (row_attr.class|default('') ~ ' field')|trim})} %}{{ block('attributes') }}{% endwith %}>
        {{- form_label(form) -}}
        {{- form_widget(form, widget_attr) -}}
    </div>
{%- endblock form_row -%}

{%- block form_label -%}
    {% if label is not same as(false) -%}
        {% if label_class is not defined %}
            {% set label_class = 'field-label' %}
        {% endif %}
        {%- if compound is defined and compound -%}
            {%- set element = 'legend' -%}
        {%- endif -%}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' ' ~ label_class)|trim}) %}

        {% if label is empty -%}
            {%- if label_format is not empty -%}
                {% set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) %}
            {%- else -%}
                {% set label = name|humanize %}
            {%- endif -%}
        {%- endif -%}
        <{{ element|default('label') }} for="{{ id }}">
            <span {% if label_attr %}{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}{% endif %}>
                {%- if translation_domain is same as(false) -%}
                    {%- if html_label is not defined or html_label is same as(false) -%}
                        {{- label -}}
                    {%- else -%}
                        {{- label|raw -}}
                    {%- endif -%}
                {%- else -%}
                    {%- if html_label is not defined or html_label is same as(false) -%}
                        {{- label|trans(label_translation_parameters, translation_domain) -}}
                    {%- else -%}
                        {{- label|trans(label_translation_parameters, translation_domain)|raw -}}
                    {%- endif -%}
                {%- endif -%}

                {% if required %}
                    <span class="required">(Required)</span>
                {%- endif -%}
            </span>
        {% if no_errors is not defined or not no_errors %}
            {{- form_errors(form) -}}
        {% endif %}
        {% if form.vars.help %}
            {{- form_help(form) -}}
        {% endif %}
        </{{ element|default('label') }}>
    {%- endif -%}
{%- endblock form_label -%}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <span class="field-error-msg" id="error-{{ form.vars.id }}">
            {%- for error in errors -%}
                <span class="visuallyhidden">{{ 'Error'|trans({}, 'validators') }}</span> {{ error.message }}
            {%- endfor -%}
        </span>
    {%- endif -%}
{%- endblock form_errors -%}

{% block form_help -%}
    {%- if help is not empty -%}
        {%- set help_attr = help_attr|merge({class: (help_attr.class|default('') ~ ' field-hint')|trim}) -%}
        <span id="hint-{{ id }}"{% with { attr: help_attr } %}{{ block('attributes') }}{% endwith %}>
            {%- if translation_domain is same as(false) -%}
                {%- if help_html is same as(false) -%}
                    {{- help -}}
                {%- else -%}
                    {{- help|raw -}}
                {%- endif -%}
            {%- else -%}
                {%- if help_html is same as(false) -%}
                    {{- help|trans(help_translation_parameters, translation_domain) -}}
                {%- else -%}
                    {{- help|trans(help_translation_parameters, translation_domain)|raw -}}
                {%- endif -%}
            {%- endif -%}
        </span>
    {%- endif -%}
{%- endblock form_help %}

{% block checkbox_radio_label -%}
    {#- Do not display the label if widget is not defined in order to prevent double label rendering -#}
    {%- if widget is defined -%}
        {%- if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif -%}
        {%- if label is not same as(false) and label is empty -%}
            {%- if label_format is not empty -%}
                {%- set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) -%}
            {%- else -%}
                {%- set label = name|humanize -%}
            {%- endif -%}
        {%- endif -%}

        {{ widget|raw }}
        {{ block('form_label') }}
    {%- endif -%}
{%- endblock checkbox_radio_label %}

{% block checkbox_label -%}
    {{- block('checkbox_radio_label') -}}
{%- endblock checkbox_label %}

{% block radio_label -%}
    {{- block('checkbox_radio_label') -}}
{%- endblock radio_label %}

{% block checkbox_widget -%}
    <fieldset {{ block('attributes') }}>
        <legend>{{ form_errors(form) }}</legend>
        <div class="checkbox-item">
            {{- form_label(form, null, { no_errors: true, widget: parent() }) -}}
        </div>
    </fieldset>
{%- endblock checkbox_widget %}

{% block radio_widget -%}
    <fieldset {{ block('attributes') }}>
        <legend>{{ form_errors(form) }}</legend>
        <div class="radio-item">
            {{- form_label(form, null, { no_errors: true, widget: parent() }) -}}
        </div>
    </fieldset>
{%- endblock radio_widget %}

{% block choice_widget_expanded -%}
    <div {{ block('widget_container_attributes') }}>
        {%- for child in form %}
            {{- form_widget(child, {
                label_class: 'faux-label',
                parent_label_class: label_attr.class|default(''),
                translation_domain: choice_translation_domain,
                valid: valid,
            }) -}}
        {% endfor -%}
    </div>
{%- endblock choice_widget_expanded %}
